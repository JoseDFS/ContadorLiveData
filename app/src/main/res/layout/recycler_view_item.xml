<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
style="@android:style/Holo.SegmentedButton">

  <TextView
          android:id="@+id/tv_teams_vs"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:text="@tools:sample/full_names"
          android:textSize="20sp"
          android:textColor="@android:color/black"
          android:layout_marginBottom="8dp"
          app:layout_constraintBottom_toTopOf="@+id/tv_fecha"
          app:layout_constraintStart_toStartOf="@+id/tv_fecha"/>

  <TextView
          android:id="@+id/tv_fecha"
          android:layout_width="285dp"
          android:layout_height="20dp"
          tools:text="@tools:sample/lorem[4:10]"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginEnd="8dp"
          app:layout_constraintStart_toStartOf="parent"
          android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
          app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="48dp"
          app:layout_constraintTop_toTopOf="parent"/>

  <TextView
          android:id="@+id/tv_id_partido"
          android:layout_width="118dp"
          android:layout_height="47dp"
          tools:text="@tools:sample/date/hhmm"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
          app:layout_constraintTop_toTopOf="parent" android:textSize="18sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>