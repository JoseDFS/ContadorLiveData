<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <TextView
            android:text="TextView"
            android:layout_width="240dp"
            android:layout_height="48dp"
            android:id="@+id/tv_vs" android:textSize="40sp"
            android:layout_marginTop="48dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="36dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="36dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="184dp"
            android:layout_height="44dp"
            android:id="@+id/tv_teamA" android:textSize="30sp"
            android:layout_marginTop="172dp" app:layout_constraintTop_toBottomOf="@+id/tv_vs"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_scoreA" android:textSize="30sp" app:layout_constraintStart_toEndOf="@+id/tv_teamA"
            android:layout_marginLeft="56dp" android:layout_marginStart="56dp" android:layout_marginTop="168dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_vs"/>
    <TextView
            android:text="TextView"
            android:layout_width="186dp"
            android:layout_height="40dp"
            android:id="@+id/tv_teamB" android:textSize="30sp"
            android:layout_marginTop="84dp" app:layout_constraintTop_toBottomOf="@+id/tv_teamA"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_scoreB" android:textSize="30sp"
            android:layout_marginTop="80dp" app:layout_constraintTop_toBottomOf="@+id/tv_scoreA"
            app:layout_constraintStart_toEndOf="@+id/tv_teamB" android:layout_marginStart="68dp"
            android:layout_marginLeft="68dp"/>
    <TextView
            android:text="Ganador :"
            android:layout_width="264dp"
            android:layout_height="111dp"
            android:id="@+id/tv_winner" android:textSize="30sp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/tv_teamB"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497" android:background="@color/orange" android:gravity="center"
            style="@style/Widget.AppCompat.TextView.SpinnerItem"/>
    <TextView
            android:text="Fecha: "
            android:layout_width="305dp"
            android:layout_height="35dp"
            android:id="@+id/tv_fecha" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="52dp"
            android:layout_marginStart="52dp" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_vs" android:textSize="24sp"/>
    <TextView
            android:text="Hora: "
            android:layout_width="303dp"
            android:layout_height="33dp"
            android:id="@+id/tv_hora" android:textSize="24sp"
            android:layout_marginTop="56dp" app:layout_constraintTop_toTopOf="@+id/tv_fecha"
            android:layout_marginStart="52dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="52dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>