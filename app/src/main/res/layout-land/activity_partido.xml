<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:id="@+id/tv_vs" android:textSize="30sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="36dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="36dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="130dp"
            android:layout_height="44dp"
            android:id="@+id/tv_teamA" android:textSize="24sp"
            android:layout_marginTop="76dp" app:layout_constraintTop_toBottomOf="@+id/tv_vs"
            android:layout_marginStart="44dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="44dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_scoreA" android:textSize="24sp" app:layout_constraintStart_toEndOf="@+id/tv_teamA"
            android:layout_marginLeft="36dp" android:layout_marginStart="36dp" android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_vs"/>
    <TextView
            android:text="TextView"
            android:layout_width="129dp"
            android:layout_height="46dp"
            android:id="@+id/tv_teamB" android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_teamA"
            android:layout_marginStart="44dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="44dp" android:layout_marginTop="4dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_scoreB" android:textSize="24sp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/tv_scoreA"
            app:layout_constraintStart_toEndOf="@+id/tv_teamB" android:layout_marginStart="36dp"
            android:layout_marginLeft="36dp"/>
    <TextView
            android:text="Ganador :"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:id="@+id/tv_winner" android:textSize="24sp"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/tv_teamB"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" android:background="@color/orange" android:gravity="center"
            style="@style/Widget.AppCompat.TextView.SpinnerItem"/>
    <TextView
            android:text="Fecha: "
            android:layout_width="307dp"
            android:layout_height="34dp"
            android:id="@+id/tv_fecha" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="120dp"
            android:layout_marginStart="120dp"
            android:textSize="24sp" android:layout_marginTop="60dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Fecha: "
            android:layout_width="85dp"
            android:layout_height="33dp"
            android:id="@+id/tv_fecha2" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:textSize="24sp" android:layout_marginTop="56dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Hora: "
            android:layout_width="318dp"
            android:layout_height="31dp"
            android:id="@+id/tv_hora" android:textSize="24sp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="@+id/tv_fecha"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="120dp" android:layout_marginStart="120dp"/>
    <TextView
            android:text="Hora: "
            android:layout_width="65dp"
            android:layout_height="31dp"
            android:id="@+id/tv_hora2" android:textSize="24sp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="@+id/tv_fecha"
            android:layout_marginStart="36dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="36dp"/>
    <TextView
            android:text="Ganador:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.503" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="236dp" app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>